{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "globals": {
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": ["error",2],
    "quotes": ["error", "single"],
    "camelcase": "off",
    "space-before-function-paren": "off",
    "semi": ["error", "always"],
    "no-template-curly-in-string": "off",
    "curly": "error",
    "padded-blocks": "error",
    "no-trailing-spaces": "error",
    "no-global-assign": "error",
    "function-paren-newline": "error"
  }
}
